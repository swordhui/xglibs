#!/bin/bash
#
# Xiange Linux build scripts

# Short one-line description of this package.
DESCRIPTION="The world's most popular open source database"

# Homepage, not used by Portage directly but handy for developer reference
HOMEPAGE="http://www.mysql.com/products/"

# Point to any required sources; these will be automatically downloaded by
# gpkg. 
# $N = package name, such as autoconf, x-org
# $V = package version, such as 2.6.10

#SRC_URI="http://foo.bar.com/$N-$V.tar.bz2"
SRC_URI="http://cdn.mysql.com//Downloads/MySQL-5.7/mysql-$V.tar.gz"


# Binary package URI.
BIN_URI=""


# Runtime Depend
RDEPEND=""

# Build time depend
DEPEND="${RDEPEND}"



#init 
xgb_init()
{
	echo "init $N-$V$R build script..."
}

#unpack
xgb_unpack()
{
	#unpard file from $XGPATH_SOURCE to current directory.
	echo "Unpacking to `pwd`"
	tar xf $XGPATH_SOURCE/$N-$V$R.tar.gz
}

#config
xgb_config()
{
	echo "config $N-$V$R..."

	#fist, cd build directory
	cd $N-$V$R
	err_check "enter directory failed."

	#second, add package specified config params to XGB_CONFIG
	#XGB_CONFIG+=" --foo --bar "

	#Third, call configure with $XGB_CONFIG
	#./configure $XGB_CONFIG

	cmake -DCMAKE_INSTALL_PREFIX=/usr -DWITH_SYSTEMD=ON . 
}

#build
xgb_build()
{
	echo "make $N-$V$R..."

	#run make in current directory
	make $XGPARA_MAKE
}

#check
xgb_check()
{
	echo "checking $N-$V$R.."
	#make check
}

#install
xgb_install()
{
	echo "install to $XGPATH_DEST"

	#install everything to $XGPATH_DEST
	make DESTDIR=$XGPATH_DEST install
}

#post install
xgb_postinst()
{
	echo "running after package installed..."

	groupdel mysql 2>/dev/null
	userdel mysql 2>/dev/null

	groupadd  mysql &&
		useradd -c "mysql Server" -d /dev/null -g mysql \
		-s /bin/false  mysql
	err_check "create user mysql failed."


	mkdir -p /usr/data
	chown mysql:mysql /usr/data
	err_check "create dir /usr/data failed."


	mkdir -p /var/run/mysqld
	chown mysql:mysql /var/run/mysqld
	err_check "create dir /var/run/mysqld failed."

	mysqld --initialize
	err_check "initialize mysqld failed."

	chown -R mysql:mysql /var/lib/mysql*

	echo "Done"

}

#pre remove
xgb_prerm()
{
	echo "running before package delete..."
}

#post remove
xgb_postrm()
{
	echo "running after package delete..."
}
