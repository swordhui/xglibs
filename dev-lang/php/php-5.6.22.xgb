#!/bin/bash
#
# Xiange Linux build scripts

# Short one-line description of this package.
DESCRIPTION="General-purpose scripting language especially suited to web development"

# Homepage, not used by Portage directly but handy for developer reference
HOMEPAGE="http://php.net/"

# Point to any required sources; these will be automatically downloaded by
# gpkg. 
# $N = package name, such as autoconf, x-org
# $V = package version, such as 2.6.10

#SRC_URI="http://foo.bar.com/$N-$V.tar.bz2"
SRC_URI="http://ee1.php.net/distributions/php-5.6.22.tar.xz"


# Binary package URI.
BIN_URI=""


# Runtime Depend
RDEPEND=""

# Build time depend
DEPEND="${RDEPEND}"



#init 
xgb_init()
{
	echo "init $N-$V$R build script..."
}

#unpack
xgb_unpack()
{
	#unpard file from $XGPATH_SOURCE to current directory.
	echo "Unpacking to `pwd`"
	tar xf $XGPATH_SOURCE/$N-$V$R.tar.xz
}

#config
xgb_config()
{
	echo "config $N-$V$R..."

	#fist, cd build directory
	cd $N-$V$R
	err_check "enter directory failed."

	#second, add package specified config params to XGB_CONFIG

	#Third, call configure with $XGB_CONFIG
	./configure --prefix=/usr \
		--enable-fpm --with-fpm-systemd --with-libxml-dir=/usr \
		--with-openssl=/usr \
		--with-pcre-regex=/usr \
		--with-zlib-dir=/usr \
		--with-curl=/usr \
		--with-enchant=/usr \
		--enable-exif \
		--enable-ftp \
		--with-openssl-dir=/usr \
		--with-gd=/usr \
		--with-vpx-dir=/usr \
		--with-jpeg-dir=/usr \
		--with-png-dir=/usr \
		--with-zlib-dir=/usr \
		--with-xpm-dir=/usr \
		--with-freetype-dir=/usr \
		--enable-gd-native-ttf \
		--with-gettext=/usr \
		--with-gmp=/usr \
		--enable-intl \
		--enable-mbstring \
		--with-icu-dir=/usr \
		--with-readline=/usr \
		--with-libxml-dir=/usr \
		--enable-sysvsem \
		--enable-sysvshm \
		--enable-sysvmsg \
		--enable-sockets \
		--enable-session \
		--enable-tokenizer \
		--with-apxs2 \
		--with-mysql=/usr \
		--with-mysqli
}

#build
xgb_build()
{
	echo "make $N-$V$R..."

	#run make in current directory
	make $XGPARA_MAKE
}

#check
xgb_check()
{
	echo "checking $N-$V$R.."
	#make check
}

#install
xgb_install()
{
	echo "install to $XGPATH_DEST"

	mkdir -p $XGPATH_DEST/etc/apache
	err_check "mkdir failed"

	cp /etc/apache/httpd.conf $XGPATH_DEST/etc/apache
	err_check "cp apache conf failed"


	#install everything to $XGPATH_DEST
	make INSTALL_ROOT=$XGPATH_DEST install
}

#post install
xgb_postinst()
{
	echo "running after package installed..."
}

#pre remove
xgb_prerm()
{
	echo "running before package delete..."
}

#post remove
xgb_postrm()
{
	echo "running after package delete..."
}
